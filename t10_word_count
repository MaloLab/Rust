use std::collections::HashMap;

fn main(){

    let sentence : String = String::from("lemon say easy peasy lemon squeezy");
    let mut words: HashMap<String, usize> = HashMap::new();

    for word in sentence.split_whitespace() {
        words.entry(word.to_string())
            .and_modify(|c| *c += 1)
            .or_insert(1);
    }



    for (word, count) in &words {
        println!("{}: {}", word, count);
    }
}
