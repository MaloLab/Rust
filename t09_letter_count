use std::collections::HashMap;

fn main(){

    let sentence : String = String::from("stay strong");
    let mut counts: HashMap<char, usize> = HashMap::new();

    for ch in sentence.chars() {
        if ch == ' ' { continue; }

        counts.entry(ch)
            .and_modify(|c| *c += 1)
            .or_insert(1);
    }

    for (ch, count) in &counts {
        println!("{}: {}", ch, count);
    }
}
